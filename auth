&lt;body&gt;
    &lt;div id="password-overlay"&gt;
        &lt;div id="password-container"&gt;
            &lt;h2&gt;Protected Content&lt;/h2&gt;
            &lt;p&gt;Please enter the password to access this site:&lt;/p&gt;
            &lt;input type="password" id="password-input" placeholder="Enter password"&gt;
            &lt;p id="error-message"&gt;Incorrect password. Please try again.&lt;/p&gt;
            &lt;button onclick="checkPassword()"&gt;Access Site&lt;/button&gt;
        &lt;/div&gt;
    &lt;/div&gt;

    &lt;script&gt;
        function checkPassword() {
            // Set your password here
            const correctPassword = "tamamap";
            
            const inputPassword = document.getElementById("password-input").value;
            const errorMessage = document.getElementById("error-message");
            
            if (inputPassword === correctPassword) {
                // Store in sessionStorage so it persists until browser is closed
                sessionStorage.setItem("sitePasswordCorrect", "true");
                document.getElementById("password-overlay").style.display = "none";
            } else {
                errorMessage.style.display = "block";
            }
        }
        
        // Check if already authenticated
        window.onload = function() {
            if (sessionStorage.getItem("sitePasswordCorrect") === "true") {
                document.getElementById("password-overlay").style.display = "none";
            }
        };
    &lt;/script&gt;
